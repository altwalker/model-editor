<div class="bg-indigo-100 border-t-4 border-indigo-500 rounded-b text-indigo-900 px-4 py-3" role="alert" ...attributes data-test-hints>
  <div class="flex">
    <div class="flex-1">
      <span class="font-bold pr-1">Hint:</span>

      <span class="text-sm"
        {{did-insert this.createLoop}}
        {{will-destroy this.destroyLoop}}
      >
        {{!-- template-lint-disable --}}
        {{{this.hint}}}
        {{!-- template-lint-enable --}}
      </span>
    </div>

    <div class="px-4">
      <svg class="fill-current h-6 w-6 text-indigo-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" data-test-hints-close-button
        {{on "click" @closeCallback}}
      >
        <title>Close</title>
        <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
      </svg>
    </div>
  </div>
</div>
