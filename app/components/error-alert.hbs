<div id="error-alert" class="bg-red-100 border-b-4 border-red-500 text-red-900 px-4 py-3 shadow-md middle-z-index" role="alert" ...attributes data-test-error>
  <div class="flex">
    <div>
      <p class="font-bold" data-test-error-name>{{get @error "name"}}:</p>
      <p class="text-sm" data-test-error-message>{{get @error "message"}}</p>
    </div>
  </div>
</div>